{% extends "base.njk" %}
{% set isSubdirectory = true %}

{# 
  MACRO: Navigation Item
  - text: The link text
  - url: Where the link goes
  - id: A unique ID to match against 'activePage'
#}
{% macro navItem(text, url, id) %}
    <li>
        <a href="{{ url }}" 
           class="block w-full text-left py-1.5 px-4 transition-all duration-300 border-l-3 font-normal sw-nav-item
           {% if activePage == id %}
               sw-nav-active font-medium
           {% else %}
               border-transparent hover:underline
           {% endif %}">
            {{ text }}
        </a>
    </li>
{% endmacro %}

{# 
  MACRO: Navigation Group (Dropdown)
  - title: The group header text (e.g. "Buttons")
  - isActiveGroup: Boolean. If true, the dropdown will be open by default.
#}
{% macro navGroup(title, isActiveGroup=false) %}
<details class="group mb-2" {% if isActiveGroup %}open{% endif %}>
    <!-- The Clickable Header -->
    <summary class="flex items-center justify-between px-3 py-2 cursor-pointer list-none sw-nav-group-header">
        <h3 class="select-none">{{ title }}</h3>
        
    </summary>
    
    <!-- The Dropdown Content -->
    <ul class="space-y-0 pl-1 mt-1">
        {{ caller() }}
    </ul>
</details>
{% endmacro %}


