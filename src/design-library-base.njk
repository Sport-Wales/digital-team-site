<!-- CSS for Scrollbar Hiding and Sport Wales Navigation -->
<style>
.scrollbar-hide {
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
    scrollbar-width: none;  /* Firefox */
}
.scrollbar-hide::-webkit-scrollbar {
    display: none;  /* Safari and Chrome */
}

/* Sport Wales Navigation Styling */
.sw-nav-group-header {
    color: #6b7280;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
}

.sw-nav-group-header:hover {
    color: #164B64;
}

.sw-nav-item {
    font-size: 11px;
    color: #4b5563;
}

.sw-nav-item:hover {
    color: #164B64;
}

/* Sport Wales Navigation Active State */
.sw-nav-active {
    border-left-color: #164B64 !important;
    border-left-width: 3px !important;
    color: #164B64 !important;
    font-weight: 500;
    background-color: transparent !important;
}
</style>

