{% extends "base.njk" %}
{% block content %}
    <div class="container mx-auto px-9">
        <h1 class="my-20 text-2xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
        Meet the team</h1>
        <!-- video of team from vimeo: -->
        <div style="padding:56.25% 0 0 0;position:relative;">
            <iframe
                src="https://player.vimeo.com/video/870620417?h=f4d5c4acae&amp;badge=0&amp;autopause=0&amp;quality_selector=1&amp;player_id=0&amp;app_id=58479"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                style="position:absolute;top:0;left:0;width:100%;height:100%;"
                title="Sport Wales Digital and Service Design Team"></iframe>
        </div>
        <!-- STAFF INTRODUCTIONS -->
        <div class="grid grid-cols-2 gap-6">
            <!-- Loop through staff members -->
            {% for staffMember in staffMembers %}
                <div class="col-span-2 sm:col-span-1 bg-gray-200 p-4 rounded-lg relative transition-transform duration-300 transform scale-100
                        hover:scale-105">
                    <img src="{{ staffMember.profile }}" alt="{{ staffMember.profile }}'s Picture" class="h-10 w-10 rounded-full">
                    <h2 class="text-lg font-semibold mb-2">{{ staffMember.job }}</h2>
                </div>
                {% endfor %}
        </div>

        <script src="https://player.vimeo.com/api/player.js"></script>
    </div>
    
        
    {% endblock %}