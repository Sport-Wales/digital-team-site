{% extends "design-library-base.njk" %}
{% set activePage = 'navbar' %}
{% set activeGroup = 'global' %}

{% block componentContent %}
<div class="max-w-[1440px] mx-auto px-6 py-8">
    
    <!-- Page Title -->
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Navigation Bar</h1>
    
    <p class="text-gray-700 leading-relaxed mb-8">
        The primary navigation components for Sport Wales. These components handle global navigation, search functionality, and user portal access.
    </p>

    <!-- Component 1: Standard Global Nav (Blue) -->
    <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">1. Standard Global Nav</h2>
        <p class="text-gray-700 mb-6">The default navigation bar used across the public site. It features the logo, main navigation links, search, profile access, and language toggle.</p>
        
        <div class="border border-gray-300 rounded-lg mb-8 overflow-hidden">
            <!-- Preview Area (Full Width to simulate browser) -->
            <div class="p-10 bg-gray-50 rounded-lg mb-8">
                
                <!-- LIVE COMPONENT START -->
                <nav class="bg-[#0f3c55] w-full px-8 py-4 flex items-center justify-between font-sans text-white">
                    <!-- 1. Logo (Left) -->
                    <div class="shrink-0 mr-8">
                        <img src="../img/sport-wales.-logo-white.svg" alt="Sport Wales" class="h-10 w-auto" />
                    </div>

                    <!-- 2. Nav Links (Center/Right) -->
                    <div class="hidden xl:flex items-center gap-6 text-[15px] font-bold tracking-wide mr-auto ml-8">
                        <a href="#" class="hover:underline hover:text-gray-200 transition-colors">About us</a>
                        <a href="#" class="hover:underline hover:text-gray-200 transition-colors">Grants & Funding</a>
                        <a href="#" class="hover:underline hover:text-gray-200 transition-colors">Guidance & Support</a>
                        <a href="#" class="hover:underline hover:text-gray-200 transition-colors">Facilities</a>
                        <a href="#" class="hover:underline hover:text-gray-200 transition-colors">News & Events</a>
                    </div>

                    <!-- 3. Icons & Utilities (Far Right) -->
                    <div class="flex items-center gap-5 shrink-0">
                        <!-- Search Icon -->
                        <button class="text-white hover:opacity-80">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </button>

                        <!-- Profile Icon -->
                        <button class="text-white hover:opacity-80">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" />
                            </svg>
                        </button>

                        <!-- Language Toggle -->
                        <div class="flex items-center gap-2">
                            <!-- Toggle Graphic -->
                            <button class="relative inline-flex h-5 w-9 items-center rounded-full bg-white">
                                <span class="inline-block h-3 w-3 transform rounded-full bg-[#0f3c55] translate-x-1 transition"></span>
                            </button>
                            <span class="text-xs font-bold uppercase tracking-wide">Switch to Welsh</span>
                        </div>
                    </div>
                </nav>
                <!-- LIVE COMPONENT END -->

            </div>
            <div class="border-t border-gray-200">
                <div id="component1-code-tabs"></div>
            </div>
        </div>
    </section>

    <!-- Component 2: Search Focused (Blue) -->
    <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">2. Search Focused Nav</h2>
        <p class="text-gray-700 mb-6">An expanded version of the standard nav that reveals a prominent search bar. Used for search results pages or when the user initiates a search.</p>
        
        <div class="border border-gray-300 rounded-lg mb-8 overflow-hidden">
            <div class="p-10 bg-gray-50 rounded-lg mb-8">
                
                <!-- LIVE COMPONENT START -->
                <div class="w-full font-sans text-white">
                    <!-- Top Section (Same as Standard) -->
                    <nav class="bg-[#0f3c55] w-full px-8 py-4 flex items-center justify-between">
                        <!-- Logo -->
                        <div class="shrink-0 mr-8">
                            <img src="../img/sport-wales.-logo-white.svg" alt="Sport Wales" class="h-10 w-auto" />
                        </div>

                        <!-- Links -->
                        <div class="hidden xl:flex items-center gap-6 text-[15px] font-bold tracking-wide mr-auto ml-8">
                            <a href="#" class="hover:text-gray-200">About us</a>
                            <a href="#" class="hover:text-gray-200">Grants & Funding</a>
                            <a href="#" class="hover:text-gray-200">Guidance & Support</a>
                            <a href="#" class="hover:text-gray-200">Facilities</a>
                            <a href="#" class="hover:text-gray-200">News & Events</a>
                        </div>

                        <!-- Icons -->
                        <div class="flex items-center gap-5 shrink-0">
                            <button class="text-white"><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg></button>
                            <button class="text-white"><svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" /></svg></button>
                            <div class="flex items-center gap-2">
                                <button class="relative inline-flex h-5 w-9 items-center rounded-full bg-white"><span class="inline-block h-3 w-3 transform rounded-full bg-[#0f3c55] translate-x-1"></span></button>
                                <span class="text-xs font-bold uppercase tracking-wide">Switch to Welsh</span>
                            </div>
                        </div>
                    </nav>

                    <!-- Bottom Section (Search Bar) -->
                    <div class="bg-[#0f3c55] w-full px-8 pb-10 pt-2 border-t border-[#0f3c55]">
                        <div class="max-w-4xl mx-auto relative">
                            <input 
                                type="text" 
                                placeholder="Type here" 
                                class="w-full h-14 pl-4 pr-16 rounded-md text-gray-700 text-lg outline-none shadow-sm"
                            >
                            <button class="absolute right-2 top-2 bottom-2 aspect-square bg-[#0f3c55] rounded-md flex items-center justify-center hover:bg-[#164B64] transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- LIVE COMPONENT END -->

            </div>
            <div class="border-t border-gray-200">
                <div id="component2-code-tabs"></div>
            </div>
        </div>
    </section>

    <!-- Component 3: Portal Login (Red) -->
    <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">3. Portal Login Nav</h2>
        <p class="text-gray-700 mb-6">A variation used for portals and facility sites. It uses the secondary brand red and features a prominent call-to-action login button.</p>
        
        <div class="border border-gray-300 rounded-lg mb-8 overflow-hidden">
           <div class="p-10 bg-gray-50 rounded-lg mb-8">
                
                <!-- LIVE COMPONENT START -->
                <nav class="bg-[#e30613] w-full px-8 py-5 flex items-center justify-between font-sans text-white">
                    <!-- Logo -->
                    <div class="shrink-0 mr-8">
                        <img src="../img/sport-wales.-logo-white.svg" alt="Sport Wales" class="h-10 w-auto" />
                    </div>

                    <!-- Links (Centered) -->
                    <div class="hidden xl:flex items-center justify-center gap-10 text-[15px] font-bold tracking-wide flex-1">
                        <a href="#" class="hover:text-gray-100">Home</a>
                        <a href="#" class="hover:text-gray-100">Our Facilities</a>
                        <a href="#" class="hover:text-gray-100">Programs</a>
                        <a href="#" class="hover:text-gray-100">About Us</a>
                        <a href="#" class="hover:text-gray-100">Contact</a>
                    </div>

                    <!-- Login Button (Right) -->
                    <div class="shrink-0 ml-8">
                        <button class="bg-white text-[#e30613] hover:bg-gray-100 transition-colors px-8 py-2.5 rounded-md font-bold text-base shadow-sm">
                            Login
                        </button>
                    </div>
                </nav>
                <!-- LIVE COMPONENT END -->

            </div>
            <div class="border-t border-gray-200">
                <div id="component3-code-tabs"></div>
            </div>
        </div>
    </section>

</div>

