{% extends "design-library-base.njk" %}
{% set activePage = 'card' %}

{% block componentContent %}
<div class="max-w-4xl mx-auto px-6 py-8">
    
    <!-- Page Title -->
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Card</h1>
    
    <p class="text-gray-700 leading-relaxed mb-8">
        Cards are used to group related content and actions. The standard card is white with a subtle shadow.
    </p>

    <!-- Component 1: Basic Card -->
    <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Basic Card</h2>
        <div class="border border-gray-300 rounded-lg mb-8">
            <div class="p-10 bg-gray-50 flex justify-center">
                <div class="sw-card max-w-sm">
                    <h3 class="sw-heading-secondary">Card Title</h3>
                    <p class="mb-4 text-gray-700">
                        This is a standard Sport Wales card component. It uses the .sw-card class for consistent padding, background, and shadows.
                    </p>
                    <a href="#" class="sw-button sw-button-secondary">Read more</a>
                </div>
            </div>
            <div class="border-t border-gray-200">
                <div id="component1-code-tabs"></div>
            </div>
        </div>
    </section>

    <!-- Component 2: Card with Image -->
    <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Card with Image</h2>
        <div class="border border-gray-300 rounded-lg mb-8">
            <div class="p-10 bg-gray-50 flex justify-center">
                <div class="sw-card max-w-sm overflow-hidden p-0">
                    <img class="w-full h-48 object-cover" src="../img/home-hero.webp" alt="Card Header">
                    <div class="p-6">
                        <h3 class="sw-heading-secondary">Card Title</h3>
                        <p class="mb-4 text-gray-700">
                            Cards can include images at the top to provide visual context.
                        </p>
                        <a href="#" class="sw-button sw-button-secondary">Read more</a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-200">
                <div id="component2-code-tabs"></div>
            </div>
        </div>
    </section>

</div>

<script type="text/babel">
{% raw %}
function CodeTabsComponent({ codeExamples, tabId }) {
    const [activeTab, setActiveTab] = React.useState('html');
    const [copied, setCopied] = React.useState(false);
    const handleCopy = () => {
        navigator.clipboard.writeText(codeExamples[activeTab]);
        setCopied(true); setTimeout(() => setCopied(false), 2000);
    };
    return (
        <div className="flex flex-col h-full font-mono text-sm leading-normal">
             <div className="flex border-b border-gray-200 bg-gray-50">
                {['html', 'css', 'react', 'tailwind'].map((tab) => (
                    <button key={tab} onClick={() => setActiveTab(tab)}
                        className={`px-4 py-2 font-medium text-gray-700 focus:outline-none ${activeTab === tab ? 'bg-white border-t-2 border-l border-r border-gray-200 border-t-blue-600 -mb-px rounded-t' : 'hover:bg-gray-100'}`}>
                        {tab.toUpperCase()}
                    </button>
                ))}
                <div className="flex-grow"></div>
                <button onClick={handleCopy} className="px-4 py-2 text-blue-600 hover:text-blue-800">{copied ? 'Copied!' : 'Copy Code'}</button>
            </div>
            <div className="flex-1 bg-gray-50 p-4 overflow-auto"><pre><code>{codeExamples[activeTab]}</code></pre></div>
        </div>
    );
}

const componentData = {
    codeExamples: {
        component1: {
            html: `<div class="sw-card">
    <h3 class="sw-heading-secondary">Card Title</h3>
    <p class="mb-4">Content...</p>
    <a href="#" class="sw-button sw-button-secondary">Read more</a>
</div>`,
            css: `.sw-card { background-color: white; border-radius: 8px; padding: 1.5rem; box-shadow: ... }`,
            react: `function Card() { return <div className="sw-card">...</div> }`,
            tailwind: `<div class="sw-card">...</div>`
        },
        component2: {
             html: `<div class="sw-card p-0 overflow-hidden">
    <img class="w-full h-48 object-cover" src="..." alt="Header">
    <div class="p-6">
        <h3 class="sw-heading-secondary">Title</h3>
        <p>Content...</p>
    </div>
</div>`,
             css: `.sw-card { ... }`,
             react: `function ImageCard() { ... }`,
             tailwind: `...`
        }
    }
};

ReactDOM.render(<CodeTabsComponent codeExamples={componentData.codeExamples.component1} tabId="component1" />, document.getElementById('component1-code-tabs'));
ReactDOM.render(<CodeTabsComponent codeExamples={componentData.codeExamples.component2} tabId="component2" />, document.getElementById('component2-code-tabs'));
{% endraw %}
</script>
{% endblock %}