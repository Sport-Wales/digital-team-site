function ComponentInstructions() {
    return {
        codeExamples: {
            component1: {
                html: `<!-- Primary Brand Colors -->
<div class="sw-bg-red text-white p-4 rounded-lg">SW Red Background</div>
<div class="sw-bg-blue text-white p-4 rounded-lg">SW Blue Background</div>
<div class="sw-bg-green text-white p-4 rounded-lg">SW Green Background</div>
<div class="sw-bg-yellow text-gray-900 p-4 rounded-lg">SW Yellow Background</div>

<!-- Text Colors -->
<h2 class="sw-text-blue">Blue Heading</h2>
<p class="sw-text-red">Red Alert Text</p>

<!-- Button Colors -->
<button class="sw-button sw-button-primary">Primary Button</button>
<button class="sw-button sw-button-start">Start Button</button>
<button class="sw-button sw-button-secondary">Secondary Button</button>`,
                css: `/* Sport Wales Color Variables */
:root {
  --color-sw-red: #E32434;
  --color-sw-blue: #164B64;
  --color-sw-green: #299D91;
  --color-sw-yellow: #F6B207;
}

/* Background Colors */
.sw-bg-red { background-color: var(--color-sw-red); }
.sw-bg-blue { background-color: var(--color-sw-blue); }
.sw-bg-green { background-color: var(--color-sw-green); }
.sw-bg-yellow { background-color: var(--color-sw-yellow); }

/* Text Colors */
.sw-text-red { color: var(--color-sw-red); }
.sw-text-blue { color: var(--color-sw-blue); }
.sw-text-green { color: var(--color-sw-green); }
.sw-text-yellow { color: var(--color-sw-yellow); }

/* Button System */
.sw-button-primary { background-color: var(--color-sw-blue); }
.sw-button-start { background-color: var(--color-sw-red); }
.sw-button-secondary { 
  border: 2px solid var(--color-sw-blue); 
  color: var(--color-sw-blue); 
}`,
                react: `// Sport Wales Color System
const colors = {
  primary: {
    red: '#E32434',
    blue: '#164B64', 
    green: '#299D91',
    yellow: '#F6B207'
  },
  semantic: {
    success: '#10B981',
    warning: '#F59E0B',
    error: '#EF4444',
    info: '#3B82F6'
  }
};

function ColoredButton({ variant = 'primary', children, ...props }) {
  const buttonStyles = {
    primary: { backgroundColor: colors.primary.blue },
    start: { backgroundColor: colors.primary.red },
    success: { backgroundColor: colors.semantic.success }
  };
  
  return (
    <button 
      style={buttonStyles[variant]}
      className="text-white px-6 py-3 rounded-lg font-semibold"
      {...props}
    >
      {children}
    </button>
  );
}

// Usage:
// <ColoredButton variant="primary">Primary Action</ColoredButton>
// <ColoredButton variant="start">Start Now</ColoredButton>`,
                tailwind: `<!-- Using Tailwind with Sport Wales Colors -->

<!-- Background Colors (Custom) -->
