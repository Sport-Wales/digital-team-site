{% block componentScripts %}
<script type="text/babel">
{% raw %}
// Icons Component Data
function ComponentInstructions() {
    return {
        codeExamples: {
            component1: {
                html: `<!-- Basic Icon Usage -->
<i class="fas fa-home"></i>
<i class="fas fa-user text-lg"></i>
<i class="fas fa-star text-2xl text-blue-600"></i>

<!-- Icons in Buttons -->
<button class="sw-button sw-button-primary">
    <i class="fas fa-download mr-2"></i>
    Download
</button>

<!-- Icons with Text -->
<div class="flex items-center">
    <i class="fas fa-envelope text-gray-400 mr-2"></i>
    <span>Email Address</span>
</div>

<!-- Icon Sizes -->
<i class="fas fa-heart text-xs"></i>   <!-- 12px -->
<i class="fas fa-heart text-sm"></i>   <!-- 14px -->
<i class="fas fa-heart text-base"></i> <!-- 16px -->
<i class="fas fa-heart text-lg"></i>   <!-- 18px -->
<i class="fas fa-heart text-xl"></i>   <!-- 20px -->
<i class="fas fa-heart text-2xl"></i>  <!-- 24px -->`,
                css: `/* Icon base styling */
.icon {
    display: inline-block;
    font-style: normal;
    font-variant: normal;
    text-rendering: auto;
    line-height: 1;
}

/* Icon colors */
.icon-primary { color: #164B64; }
.icon-accent { color: #E32434; }
.icon-success { color: #10B981; }
.icon-warning { color: #F59E0B; }

/* Icon sizes */
.icon-xs { font-size: 12px; }
.icon-sm { font-size: 14px; }
.icon-base { font-size: 16px; }
.icon-lg { font-size: 18px; }
.icon-xl { font-size: 20px; }
.icon-2xl { font-size: 24px; }`,
                react: `function Icon({ 
    name, 
    size = 'base', 
    color = 'gray-700', 
    className = '',
    ...props 
}) {
    const sizeClasses = {
        xs: 'text-xs',
        sm: 'text-sm',
        base: 'text-base',
        lg: 'text-lg',
        xl: 'text-xl',
        '2xl': 'text-2xl'
    };
    
    return (
        <i 
            className={\`fas fa-\${name} \${sizeClasses[size]} text-\${color} \${className}\`}
            {...props}
        />
    );
}

// Usage examples:
// <Icon name="home" size="lg" color="blue-600" />
// <Icon name="download" size="sm" />
// <Icon name="star" size="2xl" color="yellow-500" />`,
                tailwind: `<!-- Icon sizes with Tailwind -->
