    <i class="fas fa-envelope"></i>
    <span>Contact</span>
</div>

<!-- Button with icon -->
<button class="flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg">
    <i class="fas fa-download mr-2"></i>
    Download
</button>`
            }
        }
    };
}

const componentData = ComponentInstructions();

ReactDOM.render(
    <CodeTabsComponent codeExamples={componentData.codeExamples.component1} tabId="component1" />,
