{% set targetAuthor = 'Phil Stephens' %}
{% extends "base.njk" %}
{% block content %}
    <div class="container mx-auto px-9 max-w-screen-xl mb-5">
        <div
            class="bg-white py-24 sm:py-32">
            <!-- BLOG PREVIEW SECTION -->
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        id="blog"
                        class="text-2xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
                        Phil Stephens</h1>
                        <div class="relative mt-8 flex items-left gap-x-4">
                            <img src="https://github.com/Sport-Wales/digital-team-site/blob/main/dist/img/profiles/phil-stephens.webp?raw=true" alt="Steffan Berrow's Picture" class="h-10 w-10 rounded-full bg-gray-50 mt-1">
                            <div class="text-sm leading-6">
                                <p class="font-semibold text-gray-900">
                                    <a href="#">
                                        <span class="absolute inset-0"></span>
                                        Phil Stephens
                                    </a>
                                </p>
                                <p class="text-gray-600">Information Security Lead</p>
                            </div>
                        </div>
                        </div>
                        <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0
                                lg:max-w-none lg:grid-cols-3">
                            {% for blog in blogs %}
                                {% if blog.author == targetAuthor %}
                                    <article class="flex max-w-xl flex-col items-start justify-between">
                                        <div class="flex items-center gap-x-4 text-xs">
                                            <time datetime="2020-03-16" class="text-gray-500">{{ blog.date }}</time>
                                            {# <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
                                                                                                                                        Marketing</a> #}
                                        </div>
                                        <div class="group relative">
                                            <h3
                                                class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                                                <!-- to do: sort out href, append to end of url? -->
                                                <a href="{{ blog.filename }}.html">
                                                    <span class="absolute inset-0"></span>
                                                    {{ blog.pageTitle }}
                                                </a>
                                            </h3>
                                        </div>
                                    </article>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}